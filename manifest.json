{
    "manifest_version": 2,
    "name": "Emojis / Lenny Faces / Unicode / Dingbats",
    "description": "Simply copy/paste emojis, unicode, and lenny faces to add to your emails, posts, statuses!",
    "version": "2",

    "icons": {
        "128": "icon_128.png",
        "16": "icon_16.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "emojis and lenny faces, please!"
    },
    "permissions": [
        "contextMenus", "activeTab", "clipboardWrite"
    ]
}
